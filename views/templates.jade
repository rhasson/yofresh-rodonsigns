script(type='text/ng-template', id='yo-checkout-tpl')
  div.span8
    div.span8
      table.table.table-striped
        thead
          tr
            th Name
            th Size
            th Quantity
            th $/unit
            th Total
        tbody
          tr(ng-repeat='item in model.basket', data-yo-checkout-items)
    div.row
      div.span2.pull-right
        table.table
          tr
            td Subtotal
            td ${{order.subtotal}}
          tr
            td Shipping
            td ${{order.shipping}}
          tr
            td Total
            td ${{order.total}}
    div.row
      div.span3.pull-right
        p
          a.btn.btn-primary(href='#/final') Checkout
          a.btn(href='#/home') Go Back
          a.btn(ng-click='cancel()') Cancel


script(type='text/ng-template', id='yo-login-form-tpl')
  div.span3
  div.span6
    div.well
      div.message.alert.alert-error.hide
      form.form-horizontal
        div.control-group
          label.control-label(for='iEmail') E-mail:
          div.controls
            input(type='text', id='iEmail', placeholder='email address', ng-model='email', required)
        div.control-group
          label.control-label(for='iPassword') Password:
          div.controls
            input(type='password', id='iPassword', ng-model='password', required)
        div.control-group
          div.controls
            button.btn(type='submit', id='login_button', ng-click='login()') Login
        div.control-group
          div.controls
            p Need to register? 
              a(href='#/register') Register here
  div.span3


script(type='text/ng-template', id='yo-product-detail-short-tpl')
  a.pull-left(href='#')
    img.media-object(src='img/1.png', width='120px', heigh='120px')
  div.media-body
    h4.media-heading {{item.name}}
    p {{item.desc}}
    p Size: {{item.default_width}}" X {{item.default_height}}"
    p Quantity: 
      input.quantity(type='number', min='1', inputmode='numeric', value='{{new_quantity}}')
    p Price: ${{item.price}}
    p 
      a.add-btn.btn.btn-primary(ng-click='add()') Add
      a.remove-btn.btn.hide(ng-click='remove()') Remove
  hr


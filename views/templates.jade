        div.control-group
          label.control-label(for='iState') State:
          div.controls
            input(type='text', id='iState', inputmode='verbatim', placeholder='State abbreviation', ng-model='model.account.state')
        div.control-group
          label.control-label(for='iZip') Zip Code:
          div.controls
            input(type='text', id='iZip', inputmode='number', placeholder='Zip code', ng-model='model.account.zip')
      h4 Continue to checkout
      div.row
        div.span6
          table.table
            tr
              td Subtotal
              td ${{order.subtotal}}
            tr
              td Shipping
              td ${{order.shipping}}
            tr
              td Total
              td ${{order.total}}
          div
            button.btn.btn-primary(data-yo-stripe-form) Buy


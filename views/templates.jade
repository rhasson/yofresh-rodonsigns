script(type='text/ng-template', id='yo-home-tpl')
  div.span8(ng-controller='yoProductCtrl')
    div.loading Loading...
    ul.thumbnails
      li.span4(ng-repeat='item in model.products', data-yo-product-detail)

script(type='text/ng-template', id='yo-product-detail-tpl')
  div.thumbnail
    img(data-src='holder.js/300x200', alt='300x200', style='width: 300px; height: 200px;', src='')
    div.caption
      h3 {{item.name}}
      p {{item.desc}}
      p Price: ${{item.price}}
      p Size: {{item.default_width}}" X {{item.default_height}}"
      p Quantity:
        input.quantity(type='number', value='{{item.default_quantity}}')
      p Total: ${{total}}
      p 
        a.add-btn.btn.btn-primary(ng-click='add()') Add
        a.remove-btn.btn.hide(ng-click='remove()') Remove

script(type='text/ng-template', id='yo-user-items-tpl')
  li: a(href='#/account') Account
  li: a(href='#/logout') Logout

script(type='text/ng-template', id='yo-basket-items-tpl')
  {{item.name}}

script(type='text/ng-template', id='yo-checkout-tpl')
  div.span8
    div.media(ng-repeat='item in model.basket', data-yo-checkout-items)
  p: a.btn.btn-primary(href='#', ng-click='checkout()') Checkout
  p: a.btn(href='#', ng-click='cancel()') Cancel

script(type='text/ng-template', id='yo-checkout-items-tpl')
  a.pull-left(href='#')
    img.media-object(data-src='holder.js/64x64', src='')
  div.media-body
    h4.media-heading {{item.name}}
    p Size: {{item.default_width}}" X {{item.default_height}}"
    p Quantity: {{item.quantity}}
    p Price per unit: ${{item.price}}
    p Total: ${{item.total}}
